<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>ProductDescription</servlet-name>
        <servlet-class>product.ProductDescription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDescription</servlet-name>
        <url-pattern>/productdescription</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DisplayDiscount</servlet-name>
        <servlet-class>product.DisplayDiscount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayDiscount</servlet-name>
        <url-pattern>/display_discount.php</url-pattern>
    </servlet-mapping>
</web-app>